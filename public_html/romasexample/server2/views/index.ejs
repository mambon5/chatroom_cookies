<html>
  <head>
    <title>A Multiplayer room gamie game</title>
    <style>
      canvas {
        width: 800px;
        height: 600px;
        border: 5px solid black;
      }
    </style>
    <script src="/socket.io/socket.io.js"></script>
     <!--<script src="http://localhost:3001/socket.io/socket.io.js"></script>-->
   
  </head>
  <body>
      
      <div id="room-container"><!-- this is where the list with all our rooms is
          gonna go -->
          <% Object.keys(rooms).forEach( function(room) {%>
          <div> <%= room %></div>
          <a href="/<%= room %>">Join</a>
          <%}) %>
          <form action="/room" method="POST">
              <input name="room" type="text" required>
              <!-- required param makes this input necessary to submit 
              the form-->
              <button type="submit">New Room</button>
          </form>
      </div>
      
      <canvas id="canvas"></canvas>
  </body>
  
</html>